{
  "$schema": "https://opencode.ai/config.json",

  "plugin": [
    "@tarquinen/opencode-dcp@2.0.0",
    "@throwparty/opencode-plugin-session-title@*",
    "@zhafron/opencode-kiro-auth",
    "opencode-anthropic-auth@*",
    "opencode-antigravity-auth@*",
    //"opencode-gemini-auth@*",
  ],

  "keybinds": {
    // Enter newlines by default, require modifier for submit
    "input_submit": "ctrl+enter",
    "input_newline": "enter",
  },

  "mcp": @MCP_CONFIG_JSON@,

  "tools": {
    "*": false,
  },

  "agent": {
    // Primary
    "plan": {
      "tools": {
        "todoread": true,
        "todowrite": true,

        "webfetch": true,

        "glob": true,
        "grep": true,
        "list": true,
        "read": true,
      },
      "permission": {
        "bash": "deny",
        "edit": "deny",
        "webfetch": "ask",
      },
    },
    "build": {
      "tools": {
        "*": true,
      },
      "permission": {
        "bash": "ask",
        "edit": "ask",
        "webfetch": "ask",
      },
    },

    // Subagents
    "general": {
      "permission": {
        "bash": "deny",
        "edit": "deny",
        "webfetch": "deny",
      },
    },
  },

